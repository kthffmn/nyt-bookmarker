<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <h1>Editing User</h1>
    <form action="/users/<%= @user.id %>" method="post">
      <input type="hidden" name="_method" value="patch">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" value="<%= @user.name %>" name="user[name]">
      </div>
      <div class="form-group">
        <label for="avatar">Avatar</label>
        <input type="text" class="form-control" value="<%= @user.avatar %>" name="user[avatar]">
      </div>
      <input type="submit" value="Submit" class="btn btn-default">
    </form>
    <p class="button-padding"><a href="/users/<%= @user.id %>" class="btn btn-default">&laquo; Back</a></p>
  <div>
</div>