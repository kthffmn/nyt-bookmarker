<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <h1>Create an Account</h1>
    <form action="/users" method="post">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" placeholder="Selena Gomez" name="user[name]">
      </div>
      <div class="form-group">
        <label for="avatar">Avatar</label>
        <input type="text" class="form-control" placeholder="http://image.cdn.ispot.tv/topic/Ic/selena-gomez.png" name="user[avatar]">
      </div>
      <input type="submit" value="Sign Up" class="btn btn-default">
    </form>
    <p class="button-padding"><a href="/" class="btn btn-default">&laquo; Back</a></p>
  <div>
</div>